<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_fields"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/dark_secondary_container"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    android:elevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/search_from"/>

        <EditText
            android:id="@+id/search_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_search_from"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_icon"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/SearchEditText"
            tools:text="Москва"/>

        <View
            android:id="@+id/search_separator"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:background="@color/separator"
            app:layout_constraintStart_toStartOf="@id/search_from"
            app:layout_constraintTop_toBottomOf="@id/search_from"
            app:layout_constraintBottom_toTopOf="@id/search_to"/>

        <EditText
            android:id="@+id/search_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_search_to"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/search_separator"
            app:layout_constraintStart_toStartOf="@id/search_from"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/SearchEditText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>