<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_16dp"
    android:backgroundTint="@color/custom_text_field_background"
    android:elevation="5dp"
    android:padding="16dp"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/search_icon"
        style="@style/SearchImageButton"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/search_from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_from"
        style="@style/TextView.Subtitle.EditText"
        android:hint="@string/hint_search_from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Москва" />

    <View
        android:id="@+id/search_separator"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toTopOf="@id/search_to"
        app:layout_constraintStart_toStartOf="@id/search_from"
        app:layout_constraintTop_toBottomOf="@id/search_from"
        style="@style/Separator"/>

    <EditText
        android:id="@+id/search_to"
        style="@style/TextView.Subtitle.EditText"
        android:hint="@string/hint_search_to"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/search_from"
        app:layout_constraintTop_toBottomOf="@id/search_separator" />

</androidx.constraintlayout.widget.ConstraintLayout>
