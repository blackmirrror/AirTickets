<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">

    <ImageView
        android:id="@+id/item_music_image"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/rounded_image"/>

    <TextView
        android:id="@+id/item_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfpd_semibold"
        android:textSize="16sp"
        android:textColor="@color/on_background"
        tools:text="Die Antwoord"/>

    <TextView
        android:id="@+id/item_music_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfpd_regular"
        android:textSize="14sp"
        android:textColor="@color/on_background"
        tools:text="Будапешт"/>

    <TextView
        android:id="@+id/item_music_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_airplane"
        android:drawableTint="@color/on_secondary_container"
        android:fontFamily="@font/sfpd_regular"
        android:textSize="14sp"
        android:textColor="@color/on_background"
        tools:text="от 22 223 ₽"/>

</LinearLayout>